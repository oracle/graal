}

common_vm_linux: ${common_vm} ${linux} {
  packages: {
    gcc: "==4.9.2" # GCC 4.9.0 fails on cluster
    make: ">=3.83"
    binutils: "==2.23.2"
  }
}

common_vm_darwin: ${common_vm} ${darwin} {
  packages: {
    gcc: "==4.9.2"
  }
  environment: {
    LANG: en_US.UTF-8
    MACOSX_DEPLOYMENT_TARGET: "10.11"
